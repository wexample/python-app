#!/usr/bin/env bash
set -uo pipefail

CONFIG_FILE="/etc/wex.conf"
[[ -f "$CONFIG_FILE" ]] && source "$CONFIG_FILE" || CORE_BIN="$(command -v wex)"

HANDLER_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
APP_ROOT="$(cd "$HANDLER_DIR/../.." && pwd)"
SCRIPT_PATH="$("$CORE_BIN" app::shell/manager-path)"

export APP_ROOT
source "$SCRIPT_PATH" "$@"
