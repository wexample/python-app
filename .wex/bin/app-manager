#!/usr/bin/env bash
set -euo pipefail
ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"
APP_ROOT="${APP_ROOT:-$ROOT}"
AM_DIR="$ROOT/.wex/python/app_manager"

export APP_ROOT
"$AM_DIR/.venv/bin/python" -c "import sys; print('Using venv:', sys.executable)"
exec "$AM_DIR/.venv/bin/python" -m wexample_wex_core.app_manager "$@"
